.top_box{
  width: 100%;
  height: 750rpx;
  background-color: white;
  /* padding: 0 25rpx; */
  box-sizing: border-box;
  /* border-radius: 30rpx; */
  margin: auto;
}
.th {
  /* // 垂直居中 */
  display: flex;
  align-items: center;    
  justify-content: space-around;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgb(241, 241, 241);
}
.th-1 {
  display: flex;
  width: 35%;
  margin: 10rpx;
  color: rgb(50, 51, 51);
}
.th-2 {
  display: flex;
  width: 40%;
  border: 1px solid #ccc;
  color: rgb(50, 51, 51);
}
.th-3 {
  display: flex;
  width: 40%;
  color: rgb(50, 51, 51);
}
.tag1 {
  width: 250rpx;
  padding: 0rpx 20rpx;
  line-height: 55rpx;
  border: 1px solid #ccc;
  color: black;
  background-color: rgb(245, 245, 244);
  border-radius: 10rpx;
}
.tag2 {
  width: 40%;
  padding: 0rpx 20rpx;
  line-height: 55rpx;
  border: 1px dashed #ccc;
  /* box-sizing: border-box; */
  color: black;
  background-color: white;
  border-radius: 10rpx;
}
.tag3 {
  display: flex;
  align-items: center; 
  justify-content: center;
  width: 100%;
}
.tag4 {
  display: flex;
  align-items: center;   
  justify-content: center; 
  margin: 35rpx;
  width: 25%;
  border: 1px solid #ccc;
  padding: 10rpx 50rpx;
  line-height: 55rpx;
  /* box-sizing: border-box; */
  color: black;
  background-color: white;
  border-radius: 10rpx;
}
.th-img {
  width: 60rpx;
  height: 60rpx;
  /* background-color: #ccc; */
}
.btn {
  /* color: darkgrey !important; */
  display: flex;
  justify-content: space-around;
  width: 300rpx !important;
  line-height: 80rpx !important;
  background-color:rgb(155, 207, 206) !important;
  margin: 5rpx;
  border-radius: 50px;
}
.list-msg {
  padding: 0 20rpx;
  background-color: #fff;
  position: relative;
 }
   
 .list-msg1 {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
 }
   
 .list-msg .list-msg2 {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ccc;
  padding: 0 10rpx;
 }
   
 .select_box {
  background-color: rgb(243, 241, 241);
  padding: 0 10rpx;
  width: 93%;
  position: absolute;
  top: 130rpx;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
 }
   
 @keyframes myfirst {
  from {
   height: 0rpx;
  }
   
  to {
   height: 210rpx;
  }
 }
   
 .select_one {
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid rgb(248, 242, 242);
 }